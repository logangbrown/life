<h2 style="text-align: center;">Game of Life</h2>

<style>
    .grid {
        background-color: black;
        border: solid gray 1px;
        height: 27px;
        width: 20px;
    }

        .grid:hover {
            background-color: gold !important;
        }

    .active {
        background-color: gold;
    }

    .inactive {
        background-color: black;
    }
</style>

<form asp-controller="Demo" asp-action="RegisterInput" method="post">
    <div class="container">
        @for (int i = 0; i <= 100; i++)
        {
            if (i == 0)
            {
                <div class="col-xs-1"></div>

            }

            if (i != 0)
            {
                <button type="submit" class="grid inactive col-xs-1"></button>
            }
            if (i % 10 == 0 && i != 0)
            {
                <div class="col-xs-1"></div><div class="row"></div><div class="col-xs-1"></div>
            }
        }
    </div>
</form>