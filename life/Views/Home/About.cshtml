@{ 
    var Grid = (int[,])ViewData["Grid"];
}
<h2 style="text-align: center;">Game of Life</h2>

<form asp-controller="Demo" asp-action="RegisterInput" method="post">
    <div class="container">
        @for (int i = 0; i < 10; i++)
        {
            <div class="row">
                <div class="col-xs-1"></div>
                @for (int j = 0; j < 10; j++)
                {
                    if (Grid[i, j] == 0)
                    {
                        <button type="submit" value="@i@j" class="grid inactive col-xs-1"></button>
                    }
                    if (Grid[i, j] == 1)
                    {
                        <button type="submit" value="@i@j" class="grid active col-xs-1"></button>
                    }
                }
                <div class="col-xs-1"></div>
            </div>
        }
    </div>
</form>